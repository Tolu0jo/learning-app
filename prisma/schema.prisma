generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  LEARNER
  TEACHER
}

model User {
  id            String       @id
  email         String       @unique
  name          String?
  role          Role         @default(LEARNER)
  password_hash String
  completions   Completion[]
}

model Subject {
  id          String       @id
  title       String
  topics      Topic[]
  completions Completion[]
}

model Topic {
  id          String       @id
  title       String
  videoUrl    String
  description String
  subjectId   String
  subject     Subject      @relation(fields: [subjectId], references: [id])
  completions Completion[]
}

model Completion {
  id          String   @id
  userId      String
  topicId     String
  subjectId   String
  completedAt DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  topic       Topic    @relation(fields: [topicId], references: [id])
  subject     Subject  @relation(fields: [subjectId], references: [id])
}
